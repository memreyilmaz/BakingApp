<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/recipe_ingredients_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recipe_ingredients_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="ingredient"/>

            <TextView
                android:id="@+id/recipe_ingredients_quantity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="quantity" />

            <TextView
                android:id="@+id/recipe_ingredients_measure_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="measure"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>